{
  "$schema": "https://schema.tauri.app/config/2.0",
  "productName": "BlinkNote",
  "version": "0.1.0",
  "identifier": "com.quickmemo.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "BlinkNote",
        "width": 600,
        "height": 400,
        "minWidth": 400,
        "minHeight": 300,
        "center": true,
        "decorations": true,
        "transparent": false,
        "skipTaskbar": true,
        "visible": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "main-capability"
      ]
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
